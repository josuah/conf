#!/bin/sh -eu
export PASS="$(pass show unix/cirno/glenda)"

# prepend /mnt/term to all paths

i=$#; while [ $i -gt 0 ]; do i=$((i - 1))
	if [ -e "$1" ]; then
		set -- "$@" "/mnt/term/$(readlink -f "$1")"
	else
		set -- "$@" "$1"
	fi
	shift
done

# send the output to local cpu server
printf '%s\n' "$@"
exec drawterm -G -u glenda -h p9cpu.z0.is -a p9auth.z0.is -c plumb "$@"
