#!/bin/sh -eu

base=$(cd "${0%/*}/.."; pwd)

write() {
	local dir="$1" now="$2"
	shift 2

	if [ "$(stat -f %z "$dir/current")" -gt $((128 * 1024 * 1024)) ]; then
		mv "$dir/current" "$dir/$now.tmp"
		{
			gzip <"$dir/$now.tmp" >"$dir/$now.gz"
			rm -f "$dir/$now.tmp"
		} &
	fi
	echo "$now" "$*" >>$dir/current
}

for host in "$base/var/sys/host/"*; do
	case $host in (*"/*") continue ;; esac

	host=${host##*/}

	printf '%-15s ' "$host" >&2
	adm-do monitor "host/$host" |
	while read result; do
		printf '.'
		now=$(date +%s)
		dir=/var/spool/adm/$host
		mkdir -p "$dir"
		write "$dir" "$now" $result
	done
	printf '\n'
done
