#!/bin/sh -eu

module=${1:?}

run() false
copy() :
conf() :
pass() :
repo() :
package() :

service() {
	local service=${1:?}

	if $bin/service status "$service" >/dev/null 2>&1; then
		echo "service/$service ok"
	else
		echo "service/$service fail"
		exit=1
	fi
}

cd "$module"
. ./module.sh

exit "${exit:-1}"
