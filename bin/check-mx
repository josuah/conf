#!/bin/sh -eu

smtp() {
	sleep 0.5
	echo "EHLO $(hostname)"
	sleep 0.3
}

for x in $(dig +short mx "$dom" | sed -r 's/^[0-9]+ +//; s/\.$//'); do
	n=$((n + 1))
	out=$(smtp | openssl s_client -quiet -no_ign_eof -servername "$x" \
	  -connect "$x:25" -starttls smtp -verify_return_error -verify_depth 3)
	test "$(echo "$out" | tr -d '\r' | sed -n '$ s/ .*// p')" = 250
done
test "$n"
