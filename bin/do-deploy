#!/bin/sh -eu

cmd=${1:?}
shift

case $cmd in
(copy)
	for copy; do
		mkdir -p "$dest"
		cp -rf "$copy" "$dest"
	done
	;;
(conf)
	conf=${1:?}

	(cd "$var"; "$bin/template" >$tmp) <$conf.in
	mkdir -p "$(dirname "$dest/$conf")"
	mv "$tmp" "$dest/$conf"
	;;
(pass)
	for pass; do
		cd "$base/$var"
		[ -d "$pass/pass" ] && continue
		dd if=/dev/urandom bs=32 count=1 2>/dev/null \
		| od -x -A n | tr -cd '0-9a-f' >$tmp
		mkdir -p "$pass"
		mv "$tmp" "$pass/pass"
	done
	;;
(repo)
	repo=${1:?} path=${2:?}

	if [ -d "$path" ]; then
		git -C "$path" fetch --all
	else
		git clone --depth 1 "$repo" "$path"
	fi
	;;
(package)
	"$bin/package" install "$@"
	;;
(service)
	"$bin/service" enable "$@"
	;;
(exec)
	exit 0
	;;
esac
