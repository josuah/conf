#!/bin/sh -eu

{
	env
	printf '%s' "$0"
	printf ' "%s"' "$@"
	printf '\n'
} >/tmp/log

var_timeout=5

. "${0%/*}/lib"

case $command in
( monitor )
	. "$base/monitor/$name" >&2 & pid=$!
	sleep "$var_timeout" && kill "$pid" 2>/dev/null &
	wait "$pid" && status=ok || status=err
	echo $status do=monitor name=$name $all_vars
	;;
esac
