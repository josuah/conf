#!/bin/sh -eu

base=$(cd "${0%/*}/.."; pwd)

for host in "$base/var/sys/host/"*; do
	case $host in ( *"/*" ) continue ;; esac

	host=${host##*/}

	printf '%-15s ' "$host" >&2
	"$base/bin/apply" monitor "host/$host" 2>/dev/null |
	while read result; do
		printf '.'
		now=$(date +%s)
		dir=/var/cache/adm/events/$host
		mkdir -p "$dir"
		"$base/bin/monitor-log" "$dir" "$now" $result
	done
	printf '\n'
done
