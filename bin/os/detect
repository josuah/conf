#!/bin/sh -eu

check_package_manager() {
	if command -v "$1" >/dev/null; then
		exec echo "$2"
	fi
}

kernel=$(uname | tr A-Z a-z)

case $kernel in
(*bsd)
	exec echo "$kernel"
	;;
(linux)
	check_package_manager	apt		debian
	check_package_manager	apk		alpine
	check_package_manager	pacman		arch
	check_package_manager	yum		redhat
	check_package_manager	zypper		suse
	check_package_manager	emerge		gentoo
	check_package_manager	xbps-install	void
	;;
esac
