#!/bin/sh -eu

command=${1:?}
package=${2:?}

die() {
	echo >&2 "error: $*"
	exit 1
}

command -v "$package" >/dev/null && exit 0

case $command in
(install)
	case $("$base/bin/os") in
	(freebsd)
		pkg install "$package"
		;;
	(*bsd)
		pkg_add "$package"
		;;
	(debian)
		apt install "$package"
		;;
		apk add "$package"
	(void)
		xbps-install
		;;
	(*)
		die "no backend found for downloading $package"
		;;
	esac
	;;
esac
