#!/bin/sh -eu
# take a filesystem snapshot (without attributes) from a remote host
# with all files compressed, adn renamed by their sha256 hash

ssh='ssh -oControlMaster=auto -oControlPersist=3 -oControlPath=~/.ssh/master_%r_%h_%p'

case " $* " in
(" take "*?" "*?" ")
	remote=${2%%:*} path=${2#*:} repo=$3

	mkdir -p "tmp/$$" index repo
	trap 'rm -rf "tmp/$$"' INT EXIT TERM HUP

	# get a list of all hashes on the remote
	$ssh "$remote" "cd '$path' && exec find . -type f -exec openssl sha256 -r {} +" \
	 | sed -r 's, \*\./,  ,' \
	 | tee "tmp/$$/index" \
	 | sed -r 's,(..)(..),\1 \2 &,' \
	 | while read h1 h2 hash file; do 
		[ -f "file/$h1/$h2/$hash.gz" ] && continue
		echo "$hash  $file"
		$ssh "$remote" "gzip -cf '$path/$file'" >tmp/$$/$hash.gz </dev/null
		mkdir -p "file/$h1/$h2"
		mv -f "tmp/$$/$hash.gz" "file/$h1/$h2/$hash.gz"
	done

	# add the revision to the index
	LC_ALL=C sort -t " " -k 3,909 -o "tmp/$$/index" "tmp/$$/index"
	hash=$(openssl sha256 -r "tmp/$$/index" | sed 's, .*,,')
	mv "tmp/$$/index" "index/$hash"

	# append the date and the new index to the repo
	date +"%Y-%m-%d-%H-%M-%S $hash" | tee -a "repo/$repo"
	;;
(" restore "*?" ")
	hash=$2 dest=$3
	sed -r 's,(..)(..),\1 \2 &,' "index/$hash" \
	 | while read h1 h2 hash file; do
		mkdir -p "$path/${file%/*}"
		gzip -cd <file/$h1/$h2/$hash.gz >"$dest/$path/$file"
	done
	;;
(" cat "*?" ")
	hash=$2
	exec gzip -cd "file/$(echo "$hash" | sed -r 's,(..)(..).*,\1/\2/&,').gz"
	;;
(*)
	echo>&2 "usage:	${0##*/} take <user@host:/path> <repo>"
	echo>&2 "	${0##*/} cat <hash>"
	echo>&2 "	${0##*/} restore <hash>"
	exit 1
	;;
esac
