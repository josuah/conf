# by %%file%% at %%date%%

127.0.0.1                       localhost
::1                             localhost

%% awk -v me="$(hostname -s)" '
%%	$1 == "$MAIN" { dom = $2 } $3 != "HOST" { next }
%%	{ printf "%-31s %s %s.%s", $4, $1, $1, dom }
%%	$1 == me { printf " wan%s", $1 ~ /:/ ? 4 : 6 }
%%	{ printf "\n" }
%% ' </etc/adm/rrdata

%% [ -f /etc/hosts.local ] && cat /etc/hosts.local
