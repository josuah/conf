# X options
xset b off
xrdb -merge "$HOME/.Xresources"
find /usr/local/share/fonts -mindepth 1 -maxdepth 1 -type d -exec xset +fp {} \;

# IME
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
setxkbmap us -option compose:ralt
daemon fcitx -Dr

# status bar
daemon dwmstatus

# right clic
daemon xclickroot x-terminal-emulator

# notification popups
export XNOTIFY_FIFO="$HOME/.cache/xnotify.fifo"
rm -f "$XNOTIFY_FIFO"
mkfifo "$XNOTIFY_FIFO"
xnotify -g -20+40 <>$XNOTIFY_FIFO &

# notifications for incoming mail
daemon mailtubes-xnotify ssh josuah@mx1.josuah.net mailtubes-server Maildir

# window manager
exec ssh-agent dwm
