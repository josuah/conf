# {{ path }}
# {{ now }}

[irc]
[irc.local]
  Server = "127.0.0.1:6667"
  Nick = "matterbridge"
  RemoteNickFormat = "<{NICK}> "

[whatsapp]
[whatsapp.me]
  Number = "{{ whatsapp/var:tel }}"
  SessionFile = "/var/cache/matterbridge/whatsapp.gob"

[discord]
[discord.me]
  Token = "{{ discord/var:token }}"
  Server = "{{ discord/var:guild }}"

# whatsapp chans
#for whatsapp/chan

[[gateway]]
  name = "#whatsapp-{{ 1:name }}"
  enable = true
[[gateway.inout]]
  account = "irc.local"
  channel = "#whatsapp-{{ 1:name }}"
  options = { key="{{ irc/chan:pass name=#whatsapp-[1:name] }}" }
[[gateway.inout]]
  account = "whatsapp.me"
  channel = "{{ 1:name }}"
#end

# discord chans
#for discord/chan

[[gateway]]
  name = "#discord-{{ 1:name }}"
  enable = true
[[gateway.inout]]
  account = "irc.local"
  channel = "#discord-{{ 1:name }}"
  options = { key="{{ irc/chan:pass name=#discord-[1:name] }}" }
[[gateway.inout]]
  account = "discord.me"
  channel = "{{ 1:name }}"
#end
