# generated from adm-config repo at {{ now }}

[irc]
[irc.local]
  Server = "127.0.0.1:6667"
  Nick = "matterbridge"
  RemoteNickFormat = "<{NICK}> "

[whatsapp]
[whatsapp.me]
  Number = "{{ whatsapp/number }}"
  SessionFile = "/var/cache/matterbridge/whatsapp.gob"

[discord]
[discord.me]
  Token = "{{ discord/token }}"
  Server = "{{ discord/guild }}"

#for whatsapp/chan
[[gateway]]
  name = "#whatsapp-{{ this }}"
  enable = true
[[gateway.inout]]
  account = "irc.local"
  channel = "#whatsapp-{{ this }}"
  options = { key="{{ irc/chan/#whatsapp-%/pass }}" }
[[gateway.inout]]
  account = "whatsapp.me"
  channel = "{{ this }}"
#end

#for discord/chan
[[gateway]]
  name = "#discord-{{ this }}"
  enable = true
[[gateway.inout]]
  account = "irc.local"
  channel = "#discord-{{ this }}"
  options = { key="{{ irc/chan/#discord-%/pass }}" }
[[gateway.inout]]
  account = "discord.me"
  channel = "{{ this }}"
#end
